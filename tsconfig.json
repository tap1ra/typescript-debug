{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
